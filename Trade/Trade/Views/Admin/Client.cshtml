@{
    ViewBag.Title = "Client";
    Layout = "~/Views/MasterPages/_Admin.cshtml";
}
<script src="~/Scripts/ClientAng.js"></script>
<!--inner block start here-->
<div class="inner-block">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Admin")">Dashboard</a></li>
        <li><a href="@Url.Action("Client", "Admin")">Client</a></li>
    </ol>
    <div class="typography">
        <!--bagets-->
        <div class="typo-badges">
            <div class="appearance">
                <div ng-app="App" class="ng-cloak">
                    <div ng-controller="Ctrl" ng-init="GetClients()" class="divList">
                        <div class="alert alert-info" role="alert" ng-show="divMsgs">
                            <strong>{{Msg}} </strong>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3 grid_box1">
                                    <label for="exampleInputName2">Client Code<a style="color: red;">*</a></label>
                                    <input type="text" class="form-control1" ng-disabled="istxtClientCodeDisable" maxlength="8" ng-model="txtClientCode" id="txtClientCode" placeholder="Client Code Like TRV2000">
                                    <div class="divValidationMessage topMargin" style="display: none; color: red;" id="divErrorClientCode">
                                        Client Code is Required.
                                    </div>
                                </div>
                                <div class="col-md-3 grid_box1">
                                    <label for="exampleInputName2">Customer<a style="color: red;">*</a></label>
                                    <select class="form-control1"  ng-disabled="isddlCustomersDisable" ng-model="ddlCustomers" ng-options=" c.ID as c.NAME for c in Customers">
                                        <option value="" disabled selected><< Select Customer >></option>
                                    </select>
                                    <div class="divValidationMessage topMargin" style="display: none; color: red;" id="divErrorCustomer">
                                        Customer is Required.
                                    </div>
                                </div>
                                <div class="col-md-3 grid_box1">
                                    <label for="exampleInputName2">Investment Amount<a style="color: red;">*</a></label>
                                    <input type="text" class="form-control1" maxlength="12" numbers-only ng-model="txtInvestmentAmount" id="txtInvestmentAmount" placeholder="Investment Amount">
                                    <div class="divValidationMessage topMargin" style="display: none; color: red;" id="divErrorInvestmentAmount">
                                        Investment Amount is Required.
                                    </div>
                                </div>
                                <div class="col-md-3 grid_box1">
                                    <label for="exampleInputName2">Plan<a style="color: red;">*</a></label>
                                    <select class="form-control1" ng-model="ddlPlans" ng-options=" p.ID as p.NAME for p in Plans">
                                        <option value="" disabled selected><< Select Plan >></option>
                                    </select>
                                    <div class="divValidationMessage topMargin" style="display: none; color: red;" id="divErrorPlan">
                                        Plan is Required.
                                    </div>
                                </div>
                                <div class="col-md-3 grid_box1">
                                    <label for="exampleInputName2">Reference<a style="color: red;">*</a></label>
                                    <select class="form-control1" ng-disabled="isddlReferencesDisable" ng-model="ddlReferences" ng-options=" r.ID as r.NAME for r in References">
                                        <option value="" disabled selected ><< Select Reference >></option>
                                    </select>
                                </div>
                                <div class="col-md-3 grid_box1">
                                    <label for="exampleInputName2">Is Active</label>
                                    <input type="checkbox" class="checkbox" ng-model="chkIsActive" id="chkIsActive">
                                </div>
                                <div class="clearfix"> </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div id="divBtnGroup">
                                    <div class="col-md-1 grid_box1">
                                        <input type="submit" id="btnSave" class="btn btn-default" value="Save" ng-click="AddUpdate()" />
                                    </div>
                                    <div class="col-md-1 grid_box1">
                                        <input type="submit" value="Cancel" class="btn btn-default" ng-click="ClearFields()" />
                                    </div>
                                </div>
                                <img src="@Url.Content("~/Content/Common/")Gif/Loader.gif" id="Loader" style="display:none" />
                                <div class="clearfix"> </div>
                            </div>
                        </div>
                        <div class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <div class="row">
                                <div class="col-sm-6">
                                    <label>
                                        Show
                                        <select name="DataTables_Table_0_length" ng-model="pagesize" aria-controls="DataTables_Table_0" class="form-control input-sm">
                                            <option value="5">05</option>
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>
                                        entries
                                    </label>
                                </div>
                                <div class="col-sm-6" style="text-align: right;">
                                    <label>
                                        Search
                                        <input type="search" class="form-control input-sm" ng-model="search" placeholder="Search.." aria-controls="DataTables_Table_0">
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="table-responsive">
                                        <table class="table  table-hover">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        <a href="#" ng-click="sort('CLIENT_CODE')">
                                                            Client Code
                                                            <span ng-show="sortKey == 'CLIENT_CODE' && !sortReverse" class="fa fa-caret-down"></span>
                                                            <span ng-show="sortKey == 'CLIENT_CODE' && sortReverse" class="fa fa-caret-up"></span>
                                                        </a>
                                                    </th>
                                                    <th>
                                                        <a href="#" ng-click="sort('CUSTOMER_NAME')">
                                                            Customer Name
                                                            <span ng-show="sortKey == 'CUSTOMER_NAME' && !sortReverse" class="fa fa-caret-down"></span>
                                                            <span ng-show="sortKey == 'CUSTOMER_NAME' && sortReverse" class="fa fa-caret-up"></span>
                                                        </a>
                                                    </th>
                                                    <th>
                                                        <a href="#" ng-click="sort('INVESTMENT_AMOUNT')">
                                                            Investment
                                                            <span ng-show="sortKey == 'INVESTMENT_AMOUNT' && !sortReverse" class="fa fa-caret-down"></span>
                                                            <span ng-show="sortKey == 'INVESTMENT_AMOUNT' && sortReverse" class="fa fa-caret-up"></span>
                                                        </a>
                                                    </th>
                                                    <th>
                                                        <a href="#" ng-click="sort('PLAN_NAME')">
                                                            Plan Name
                                                            <span ng-show="sortKey == 'PLAN_NAME' && !sortReverse" class="fa fa-caret-down"></span>
                                                            <span ng-show="sortKey == 'PLAN_NAME' && sortReverse" class="fa fa-caret-up"></span>
                                                        </a>
                                                    </th>
                                                    <th>
                                                        <a href="#" ng-click="sort('REFERENCE_CLIENT_NAME')">
                                                            Reference
                                                            <span ng-show="sortKey == 'REFERENCE_CLIENT_NAME' && !sortReverse" class="fa fa-caret-down"></span>
                                                            <span ng-show="sortKey == 'REFERENCE_CLIENT_NAME' && sortReverse" class="fa fa-caret-up"></span>
                                                        </a>
                                                    </th>
                                                    <th style="text-align:center;">
                                                        <a href="#" ng-click="sort('ISACTIVE')">
                                                            Status <span ng-show="sortKey == 'ISACTIVE' && !sortReverse" class="fa fa-caret-down"></span>
                                                            <span ng-show="sortKey == 'ISACTIVE' && sortReverse" class="fa fa-caret-up"></span>
                                                        </a>
                                                    </th>
                                                    <th style="text-align:center;"><a>Action</a></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr dir-paginate="cl in Clients|orderBy:sortKey:sortReverse|filter:search|itemsPerPage:pagesize">
                                                    <td>
                                                        {{cl.CLIENT_CODE}}
                                                    </td>
                                                    <td>
                                                        {{cl.CUSTOMER_NAME}}
                                                    </td>
                                                    <td>
                                                        {{cl.INVESTMENT_AMOUNT}}
                                                    </td>
                                                    <td>
                                                        {{cl.PLAN_NAME}}
                                                    </td>
                                                    <td>
                                                        {{cl.REFERENCE_CLIENT_NAME}}
                                                    </td>
                                                    <td align="center">
                                                        <span ng-if="cl.ISACTIVE === 1"><i class="fa fa-check" style="color:green;" aria-hidden="true"></i></span>
                                                        <span ng-if="cl.ISACTIVE === 0"><i class="fa fa-check" style="color:red;" aria-hidden="true"></i></span>
                                                    </td>
                                                    <td align="center">
                                                        <a href=""><i class="fa fa-pencil-square-o" aria-hidden="true" ng-click="Edit(cl)"></i></a>
                                                        <a href=""><i class="fa fa-trash-o" aria-hidden="true" ng-click="Delete(cl)"></i></a>
                                                        @* <a href="~/Reports/Viewer/Report.aspx?ID={{c.ID}}&TaxDepartment=true"><i class="fa fa-download" aria-hidden="true"></i></a>*@
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="dataTables_info" id="DataTables_Table_0_info" role="status" aria-live="polite">
                                        Total Records : <a>{{Clients.length}}</a>
                                    </div>
                                </div>
                                <div class="col-sm-6" style="text-align: right;">
                                    <div class="dataTables_paginate paging_simple_numbers">
                                        <dir-pagination-controls max-size="10" direction-links="true" boundary-links="true"></dir-pagination-controls>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @Html.Hidden("ID")
                </div>
            </div>
        </div>
        <!--bagets-->
    </div>
</div>
<!--inner block end here-->
